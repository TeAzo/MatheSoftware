  private static double[] werteEingabe() throws IOException {
        double[] werte = new double[3];

        char[] abc = {'a', 'b', 'c'};

        System.out.println("Gib die Koeffizienten a, b und c ein:");

        for (int i = 0; i < werte.length; i++) {
            System.out.print("Koeffizient " + abc[i] + ": ");
            werte[i] = IO.readDouble();
        }

        return werte;
    }


    private static void berechneQuadratischeGleichung(double a, double b, double c) {

        double d = Math.pow(b, 2) - 4 * a * c;

        if (d < 0) {
            System.out.println("Keine Lösung vorhanden!");
        } else if (d == 0) {
            double ergebnis = -b / (2 * a);
            System.out.println("Eine Lösung vorhanden bei x = " + ergebnis);
        } else {
            double ergebnis1 = (-b + Math.sqrt(d)) / (2 * a);
            double ergebnis2 = (-b - Math.sqrt(d)) / (2 * a);
            System.out.println("Zwei Lösungen vorhanden bei:");
            System.out.println("Eine Nullstelle bei x = " + ergebnis1);
            System.out.println("Eine Nullstelle bei x = " + ergebnis2);

        }
    }

    private static void ausgabeQuadratischeGleichung(double a, double b, double c) {
        System.out.println("Ergebnisse der Quadratischen Gleichung:");
        berechneQuadratischeGleichung(a, b, c);
    }
